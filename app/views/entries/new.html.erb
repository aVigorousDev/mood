<div class="card">
  <div class="card-body">
    <h5 class="card-title">New Entry</h5>
    <h6 class="card-subtitle text-muted mb-3">How are you feeling right now?</h6>

    <%= form_with url: entries_path, local: true do %>
      <%= hidden_field_tag(:notification_id, notification&.id) %>
      <%= hidden_field_tag(:notification_nonce, notification&.nonce) %>

      <div class="form-group">
        <label>Choose one or more</label>

        <% moods.each do |mood| %>
          <label class="custom-checkbox-container border rounded mb-1">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" name="choices[]" value="<%= mood.slug %>">
              <span class="custom-control-label"><%= mood.description %></span>
            </div>
          </label>
        <% end %>
      </div>

      <div class="form-group">
        <label for="notes">Add a note</label>
        <textarea id="notes" class="form-control" rows="3" name="notes"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Log Entry</button>
    <% end %>
  </div>
</div>
